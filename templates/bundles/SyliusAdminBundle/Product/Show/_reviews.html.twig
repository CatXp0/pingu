<div class="ui attached segment">
    <table class="ui very basic celled table" style="padding-top: 20px">
        <thead>
        <tr>
            <th></th>
            <th>{{ 'sylius.ui.title'|trans }}</th>
            <th>{{ 'sylius.ui.comment'|trans }}</th>
            <th>{{ 'sylius.ui.rating'|trans }}</th>
            <th>{{ 'sylius.ui.affectiveItemsAnalysisRating'|trans }}</th>
            <th style="padding-right: 15px;">{{ 'sylius.ui.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody class="reviews-accordion">
        {% if product.reviews|length > 0 %}
            {% for review in product.reviews %}
                <tr class="reviews-accordion__title item-{{ loop.index	}}">
                    <td>{{ loop.index }}</td>
                    <td>{{ review.title }}</td>
                    <td>{{ review.comment }}</td>
                    <td>{{ review.rating }}</td>
                    <td>{{ review.affectiveItemsAnalysisRating }}</td>
                </tr>
            {% endfor %}
        {% else %}
            {{ messages.info('sylius.ui.there_are_no_reviews') }}
        {% endif %}
        </tbody>
    </table>
</div>
